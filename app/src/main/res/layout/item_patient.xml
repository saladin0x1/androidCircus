<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
                app:strokeWidth="2dp"
                app:strokeColor="@color/anthropic_beige"
                app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Patient Avatar (First Letter) -->
        <TextView
            android:id="@+id/patientAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/primary"
            android:text="A"
            android:textSize="20sp"
            android:textColor="@color/text_on_primary"
            android:gravity="center"
            android:fontFamily="@font/poppins" />

        <!-- Patient Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patientNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jean Dupont"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/appointmentCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 rendez-vous"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Arrow -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/icon_tint"
            android:rotation="180"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
