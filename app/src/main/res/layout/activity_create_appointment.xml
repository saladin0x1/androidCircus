<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/surface">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nouveau Rendez-vous"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:fontFamily="@font/poppins" />
        
        <!-- Empty view for spacing balance -->
        <View
            android:layout_width="60dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Médecin"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/doctorSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date du rendez-vous"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dateInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Sélectionner une date"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"
        android:layout_marginTop="-24dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motif de consultation"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/reasonInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: Consultation générale, Douleur..."
        android:background="@android:color/transparent"
        android:minHeight="50dp"
        android:gravity="top|start"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Confirmer le rendez-vous"
        android:backgroundTint="@color/primary"
        android:textColor="@color/text_on_primary"
        android:textAllCaps="false"
        android:textSize="16sp" />

</LinearLayout>
