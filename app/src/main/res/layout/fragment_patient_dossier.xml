<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Patient Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            
                app:strokeWidth="2dp"
                app:strokeColor="@color/anthropic_beige"
                app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/primary">

                <TextView
                    android:id="@+id/patientAvatarLarge"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/surface"
                    android:text="JD"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/patientNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jean Dupont"
                    android:textSize="22sp"
                    android:textColor="@color/text_on_primary"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/patientEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jean.dupont@email.com"
                    android:textSize="14sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Patient Info Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informations Personnelles"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            
                app:strokeWidth="2dp"
                app:strokeColor="@color/anthropic_beige"
                app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_calendar_month"
                        app:tint="@color/icon_tint" />

                    <TextView
                        android:id="@+id/patientDobText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15 Juin 1990 (34 ans)"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/icon_tint" />

                    <TextView
                        android:id="@+id/patientPhoneText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+33 6 12 34 56 78"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Appointments History Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historique des Rendez-vous"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appointmentsHistoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_medical_advice"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aucun dossier disponible"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ©lectionnez un patient pour voir son dossier"
                android:textSize="13sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
