<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    
                app:strokeWidth="2dp"
                app:strokeColor="@color/anthropic_beige"
                app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/doctorNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dr. Sarah Smith"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/poppins" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/success_light"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/success" />

                <TextView
                    android:id="@+id/statusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Scheduled"
                    android:textColor="@color/success"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/specializationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Practitioner"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_calendar_month"
                app:tint="@color/icon_tint" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="25 Dec 2025, 10:00 AM"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/reasonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Reason: Annual checkup"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:textSize="13sp"
            android:textColor="@color/error"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/cancel_button_background"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
