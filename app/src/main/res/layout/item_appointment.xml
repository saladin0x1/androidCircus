<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/doctorNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dr. Sarah Smith"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#E8F5E9"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/statusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Scheduled"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/specializationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Practitioner"
            android:textSize="14sp"
            android:textColor="#6B6B6B"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_calendar_month"
                app:tint="#6B6B6B" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="25 Dec 2025, 10:00 AM"
                android:textSize="13sp"
                android:textColor="#424242" />
        </LinearLayout>

        <TextView
            android:id="@+id/reasonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Reason: Annual checkup"
            android:textSize="13sp"
            android:textColor="#6B6B6B"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
